<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Login Administrativo</title>
    <style>
      /* ... tus estilos originales ... */
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@500;700&display=swap" rel="stylesheet">
  </head>

  <body>
    <div class="login-container">
      <h1>Panel del Reino</h1>

      <form id="loginForm">
        <input name="username" placeholder="Usuario" required />
        <input name="password" type="password" placeholder="Password" required />
        <button type="submit">Entrar al Reino</button>
      </form>

      <div class="footer-text">Sistema Administrativo</div>
      <div class="footer-text">Blacklist Alopecia <a href="/blacklist">Click Here</a></div>
      <div class="footer-text">Invitar a un amigo <a href="/registro_invitados">Click Here</a></div>
    </div>

    <script>
      const form = document.getElementById("loginForm");

      if (form) {
        form.addEventListener("submit", async (e) => {
          e.preventDefault();

          const data = {
            username: e.target.username.value,
            password: e.target.password.value
          };

          const res = await fetch("https://alo-guild-page-production.up.railway.app/api/login", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data),
            credentials: "include" // importante para cookies
          });

          if (res.ok) {
            window.location.href = "/dashboard";
          } else {
            const msg = await res.text();
            alert("Error: " + msg);
          }
        });
      }
    </script>
  </body>
</html>


---
import Layout from "../layouts/Layout.astro";
const admin = Astro.cookies.get("admin");

import { pool } from "../db/connection";

const [rows]: any[] = await pool.execute(`
  SELECT id, nick_albion, nick_discord, razon, created_at
  FROM blacklist
  ORDER BY created_at DESC
`);

if (!admin) {
  return Astro.redirect("/");
}
---

<Layout title="Listar">
  <button id="abrirModal" class="btn-medieval">Añadir a Blacklist</button>

  <div id="modalBlacklist" class="modal">
    <div class="modal-content">
      <h2>Registro en Blacklist</h2>

      <form id="blacklistForm">
        <input type="text" name="nickAlbion" placeholder="Nick Albion" required maxlength="30" />
        <input type="text" name="nickDiscord" placeholder="Nick Discord (Opcional)" maxlength="30" />
        <input type="text" name="razon" placeholder="Razón" required maxlength="500" />

        <button type="submit" class="btn-registrar">Registrar</button>
        <button type="button" id="cerrarModal" class="btn-cancel">Cancelar</button>
      </form>

      <div id="mensajeBlacklist"></div>
    </div>
  </div>

  <div class="dashboard-container">
    <h1 class="titulo">Blacklist Registrados</h1>
    <div class="tabla-container">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Nick en Albion</th>
            <th>Nick en Discord</th>
            <th>Razón</th>
            <th>Fecha</th>
          </tr>
        </thead>
        <tbody id="tablaBlacklist">
          {rows.map(row => (
            <tr>
              <td>{row.id}</td>
              <td>{row.nick_albion}</td>
              <td>{row.nick_discord}</td>
              <td>{row.razon}</td>
              <td>{new Date(row.created_at).toLocaleDateString()}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
</Layout>

<script>
  const modal = document.getElementById("modalBlacklist");
  const abrir = document.getElementById("abrirModal");
  const cerrar = document.getElementById("cerrarModal");
  const form = document.getElementById("blacklistForm");
  const mensaje = document.getElementById("mensajeBlacklist");
  const tabla = document.getElementById("tablaBlacklist");

  abrir.onclick = () => modal.style.display = "flex";
  cerrar.onclick = () => modal.style.display = "none";

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    mensaje.textContent = "";
    form.querySelector("button[type=submit]").disabled = true;

    // Convertir formulario a JSON
    const formData = new FormData(form);
    const jsonData = Object.fromEntries(formData.entries());

    try {
      const res = await fetch("https://alo-guild-page-production.up.railway.app/api/proxyblacklist", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(jsonData)
      });

      const data = await res.json();

      if (res.ok) {
        mensaje.textContent = "Jugador añadido a Blacklist ⚔️";
        mensaje.style.color = "#7CFC00";
        form.reset();

        // Agregar fila nueva dinámicamente
        const nuevaFila = document.createElement("tr");
        nuevaFila.innerHTML = `
          <td>${data.id}</td>
          <td>${data.nick_albion}</td>
          <td>${data.nick_discord || ""}</td>
          <td>${data.razon}</td>
          <td>${new Date(data.created_at).toLocaleDateString()}</td>
        `;
        tabla.prepend(nuevaFila);

        setTimeout(() => modal.style.display = "none", 1500);
      } else {
        mensaje.textContent = data.error || "Error";
        mensaje.style.color = "#ff4d4d";
      }

    } catch (err) {
      mensaje.textContent = "Error de conexión ⚠️";
      mensaje.style.color = "#ff4d4d";
      console.error(err);
    } finally {
      form.querySelector("button[type=submit]").disabled = false;
    }
  });
</script>





